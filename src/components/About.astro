---
interface Props {
  lang: 'es' | 'en' | 'zh';
  t: (key: string) => string;
}

const { lang, t } = Astro.props;

const timeline = [
  { year: '2013', role: t('timeline.2013.role'), desc: t('timeline.2013.desc') },
  { year: '2016', role: t('timeline.2016.role'), desc: t('timeline.2016.desc') },
  { year: '2018', role: t('timeline.2018.role'), desc: t('timeline.2018.desc') },
  { year: String(new Date().getFullYear()), role: t('timeline.current.role'), desc: t('timeline.current.desc') },
];
---

<section id="sobre" class="about section-pad">
  <div class="container about-grid">

    <!-- Photo column -->
    <div class="about-photo-col reveal-left">
      <div class="photo-frame">
        <img
          src="/portrait.jpeg"
          alt={t('about.photo_alt')}
          class="about-photo"
          loading="lazy"
          decoding="async"
        />
        <div class="photo-caption">
          <span>{t('about.photo_caption')}</span>
        </div>
      </div>

      <!-- Floating credential badge -->
      <div class="credential-badge" aria-label="17 summits, certified guide">
        <div class="badge-number">17</div>
        <div class="badge-text">
          {lang === 'es' ? 'Cumbres' : lang === 'zh' ? '登顶' : 'Summits'}
        </div>
      </div>
    </div>

    <!-- Bio column -->
    <div class="about-bio-col">
      <p class="tag">{t('about.tag')}</p>
      <h2 class="reveal">{t('about.heading')}</h2>
      <div class="divider reveal reveal-delay-1"></div>
      <p class="body-text reveal reveal-delay-2">{t('about.body')}</p>

      <!-- Timeline -->
      <div class="timeline reveal reveal-delay-3" aria-label="Career timeline">
        {timeline.map((item, i) => (
          <div class="timeline-item">
            <div class="timeline-year">{item.year}</div>
            <div class="timeline-connector" aria-hidden="true">
              <div class="timeline-dot"></div>
              {i < timeline.length - 1 && <div class="timeline-line"></div>}
            </div>
            <div class="timeline-content">
              <strong class="timeline-role">{item.role}</strong>
              <span class="timeline-desc">{item.desc}</span>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

<style>
  .about {
    background: var(--section-about-bg);
  }

  .about-grid {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: clamp(40px, 6vw, 80px);
    align-items: start;
  }

  /* Photo column */
  .about-photo-col {
    position: relative;
  }

  .photo-frame {
    position: relative;
    border-radius: var(--radius-xl);
    overflow: hidden;
    box-shadow: var(--shadow-photo);
    aspect-ratio: 4/5;
  }

  .about-photo {
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center top;
    display: block;
  }

  .photo-caption {
    position: absolute;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 20px 24px;
    background: linear-gradient(to top, rgba(15, 25, 35, 0.85), transparent);
    color: rgba(255, 255, 255, 0.85);
    font-size: var(--fs-small);
    font-weight: 500;
    letter-spacing: 0.02em;
  }

  .credential-badge {
    position: absolute;
    bottom: -20px;
    right: -20px;
    width: 90px;
    height: 90px;
    background: var(--accent);
    border-radius: 50%;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    box-shadow: var(--shadow-gold);
    color: var(--white);
    text-align: center;
  }

  .badge-number {
    font-family: 'Playfair Display', Georgia, serif;
    font-size: 1.75rem;
    font-weight: 700;
    line-height: 1;
  }

  .badge-text {
    font-size: 0.65rem;
    font-weight: 600;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    opacity: 0.9;
  }

  /* Bio column */
  .about-bio-col {
    padding-top: 8px;
  }

  .about-bio-col h2 {
    font-size: var(--fs-h1);
    color: var(--text-primary);
    margin-bottom: 8px;
  }

  .body-text {
    font-size: 1.0625rem;
    line-height: 1.75;
    color: var(--text-secondary);
    margin-bottom: 40px;
  }

  /* Timeline */
  .timeline {
    display: flex;
    flex-direction: column;
    gap: 0;
  }

  .timeline-item {
    display: grid;
    grid-template-columns: 48px 32px 1fr;
    gap: 0 12px;
    align-items: start;
  }

  .timeline-year {
    font-size: var(--fs-xs);
    font-weight: 700;
    color: var(--accent);
    padding-top: 2px;
    letter-spacing: 0.04em;
  }

  .timeline-connector {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
  }

  .timeline-dot {
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background: var(--accent);
    flex-shrink: 0;
    margin-top: 4px;
    box-shadow: 0 0 0 3px rgba(200, 138, 62, 0.2);
  }

  .timeline-line {
    width: 2px;
    height: 40px;
    background: linear-gradient(to bottom, var(--accent), rgba(200, 138, 62, 0.15));
    margin-top: 4px;
  }

  .timeline-content {
    padding-bottom: 24px;
  }

  .timeline-role {
    display: block;
    font-size: var(--fs-small);
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 2px;
  }

  .timeline-desc {
    font-size: var(--fs-xs);
    color: var(--text-secondary);
  }

  @media (max-width: 900px) {
    .about-grid {
      grid-template-columns: 1fr;
    }

    .about-photo-col {
      max-width: 480px;
      margin-inline: auto;
    }

    .credential-badge {
      bottom: -16px;
      right: 16px;
    }
  }

  @media (max-width: 480px) {
    .credential-badge {
      width: 76px;
      height: 76px;
      right: 8px;
      bottom: -12px;
    }

    .badge-number {
      font-size: 1.5rem;
    }
  }
</style>
