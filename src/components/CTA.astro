---
interface Props {
  lang: 'es' | 'en' | 'zh';
  t: (key: string) => string;
}

const { lang, t } = Astro.props;

const features = [
  { key: 'cta.feature1', icon: '✓' },
  { key: 'cta.feature2', icon: '⏱' },
  { key: 'cta.feature3', icon: '★' },
];
---

<section class="cta-section section-pad" aria-labelledby="cta-title">
  <div class="container cta-inner">
    <div class="cta-content reveal">
      <p class="tag cta-tag">{t('cta.tag')}</p>
      <h2 id="cta-title">{t('cta.title')}</h2>
      <p class="cta-body">{t('cta.body')}</p>

      <div class="cta-features" aria-label="Key benefits">
        {features.map(f => (
          <div class="cta-chip">
            <span class="chip-icon" aria-hidden="true">{f.icon}</span>
            <span>{t(f.key)}</span>
          </div>
        ))}
      </div>

      <div class="cta-actions">
        <button
          class="btn btn-primary cta-btn-main"
          onclick={`Calendly.initPopupWidget({url: '${t('calendly.url')}'}); return false;`}
        >
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <rect x="3" y="4" width="18" height="18" rx="2"/>
            <line x1="16" y1="2" x2="16" y2="6"/>
            <line x1="8" y1="2" x2="8" y2="6"/>
            <line x1="3" y1="10" x2="21" y2="10"/>
          </svg>
          {t('cta.button')}
        </button>

        <div class="cta-fallbacks">
          <a
            href={t('cta.whatsapp_url')}
            class="btn cta-btn-whatsapp"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={t('cta.whatsapp')}
          >
            <svg width="18" height="18" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
              <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
            </svg>
            {t('cta.whatsapp')}
          </a>
        </div>
      </div>

      <p class="cta-email-line">
        {t('cta.fallback')}
        <a href={`mailto:${t('cta.email')}`} class="cta-email">{t('cta.email')}</a>
      </p>
    </div>

    <!-- Decorative mountain icon -->
    <div class="cta-deco" aria-hidden="true">
      <svg viewBox="0 0 200 160" fill="none" xmlns="http://www.w3.org/2000/svg" class="mountain-deco">
        <polygon points="100,10 180,150 20,150" fill="rgba(200,138,62,0.06)" stroke="rgba(200,138,62,0.15)" stroke-width="1.5"/>
        <polygon points="100,40 155,150 45,150" fill="rgba(200,138,62,0.04)" stroke="rgba(200,138,62,0.1)" stroke-width="1"/>
        <circle cx="100" cy="10" r="4" fill="rgba(200,138,62,0.4)"/>
      </svg>
    </div>
  </div>
</section>

<style>
  .cta-section {
    background: linear-gradient(135deg, var(--dark) 0%, var(--primary) 60%, #1a2a3a 100%);
    color: var(--white);
    position: relative;
    overflow: hidden;
  }

  .cta-section .tag {
    color: var(--accent);
  }

  .cta-section .tag::before,
  .cta-section .tag::after {
    background: var(--accent);
  }

  .cta-inner {
    display: grid;
    grid-template-columns: 1fr auto;
    gap: 48px;
    align-items: center;
    position: relative;
    z-index: 1;
  }

  .cta-content {
    max-width: 620px;
  }

  .cta-tag {
    margin-bottom: 16px;
  }

  .cta-content h2 {
    font-size: var(--fs-h1);
    color: var(--white);
    margin-bottom: 16px;
    line-height: 1.2;
  }

  .cta-body {
    font-size: 1.0625rem;
    color: rgba(255, 255, 255, 0.7);
    margin-bottom: 28px;
    line-height: 1.6;
  }

  .cta-features {
    display: flex;
    flex-wrap: wrap;
    gap: 10px;
    margin-bottom: 32px;
  }

  .cta-chip {
    display: flex;
    align-items: center;
    gap: 8px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 0.12);
    border-radius: 20px;
    padding: 8px 16px;
    font-size: var(--fs-xs);
    font-weight: 500;
    color: rgba(255, 255, 255, 0.85);
    letter-spacing: 0.02em;
  }

  .chip-icon {
    color: var(--accent);
    font-size: 0.875rem;
  }

  .cta-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    margin-bottom: 20px;
  }

  .cta-btn-main {
    padding: 16px 32px;
    font-size: 0.9375rem;
  }

  .cta-btn-whatsapp {
    background: #25D366;
    color: var(--white);
    padding: 16px 24px;
    font-size: 0.9375rem;
    border-radius: var(--radius-sm);
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 8px;
    transition: background 0.2s, transform 0.2s;
  }

  .cta-btn-whatsapp:hover {
    background: #1ebe59;
    transform: translateY(-1px);
  }

  .cta-fallbacks {
    display: flex;
    align-items: center;
  }

  .cta-email-line {
    font-size: var(--fs-small);
    color: rgba(255, 255, 255, 0.5);
  }

  .cta-email {
    color: var(--accent);
    font-weight: 500;
    text-decoration: underline;
    text-decoration-color: rgba(200, 138, 62, 0.4);
    transition: color 0.2s;
    margin-left: 4px;
  }

  .cta-email:hover {
    color: #e0a055;
  }

  .cta-deco {
    flex-shrink: 0;
    opacity: 0.6;
  }

  .mountain-deco {
    width: 200px;
    height: 160px;
  }

  @media (max-width: 900px) {
    .cta-inner {
      grid-template-columns: 1fr;
    }

    .cta-deco {
      display: none;
    }

    .cta-content {
      max-width: none;
    }
  }

  @media (max-width: 480px) {
    .cta-actions {
      flex-direction: column;
    }

    .cta-btn-main,
    .cta-btn-whatsapp {
      width: 100%;
      justify-content: center;
    }
  }
</style>
