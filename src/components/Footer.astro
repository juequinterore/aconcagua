const expeditions = [
  { key: 'pricing.card1.name', href: '#plan-1' },
  { key: 'pricing.card2.name', href: '#plan-2' },
  { key: 'pricing.card3.name', href: '#plan-3' },
  { key: 'pricing.card4.name', href: '#plan-4' },
];

const legalLinks = [
  { href: lang === 'es' ? '/privacidad' : lang === 'zh' ? '/zh/privacy' : '/en/privacy' },
];
---

<footer class="footer" role="contentinfo">
  <div class="footer-main container">
    <!-- Brand column -->
    <div class="footer-col footer-brand">
      <a href={lang === 'es' ? '/' : `/${lang}/`} class="footer-logo" aria-label="Aconcagua - Julián Kusi">
        <img src="/logo.webp" alt="Julián Kusi - Aconcagua" class="footer-logo-img" width="140" height="42" />
      </a>
      <p class="footer-tagline">{t('footer.tagline')}</p>
      <div class="footer-social" aria-label="Social media links">
        {socialLinks.map(social => (
          <a
            href={social.href}
            class="social-icon"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={social.name}
          >
            <span set:html={social.icon}></span>
          </a>
        ))}
      </div>
    </div>

    <!-- Navigation column -->
    <div class="footer-col">
      <h3 class="footer-col-title">{t('footer.nav')}</h3>
      <ul class="footer-links" role="list">
        {navLinks.map(link => (
          <li><a href={link.href}>{t(link.key)}</a></li>
        ))}
      </ul>
    </div>

    <!-- Expeditions column -->
    <div class="footer-col">
      <h3 class="footer-col-title">{t('footer.expeditions')}</h3>
      <ul class="footer-links" role="list">
        {expeditions.map(exp => (
          <li><a href={exp.href}>{t(exp.key)}</a></li>
        ))}
      </ul>
    </div>

    <!-- Legal column -->
    <div class="footer-col">
      <h3 class="footer-col-title">
        {t('footer.legal')}
      </h3>
      <ul class="footer-links" role="list">
        {legalLinks.map(link => (
          <li><a href={link.href}>{t('footer.privacy')}</a></li>
        ))}
        <li><button id="manage-cookies" class="footer-cookie-btn">{t('footer.manage_cookies')}</button></li>
      </ul>
    </div>

    <!-- Contact column -->
    <div class="footer-col">
      <h3 class="footer-col-title">{t('footer.contact')}</h3>
      <ul class="footer-contact-list" role="list">
        <li>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/>
            <circle cx="12" cy="10" r="3"/>
          </svg>
          <span>{t('footer.location')}</span>
        </li>
        <li>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/>
            <polyline points="22,6 12,13 2,6"/>
          </svg>
          <a href="mailto:julian@aconcagua.co">julian@aconcagua.co</a>
        </li>
        <li>
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" aria-hidden="true">
            <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
