          <a href="https://wa.me/573146294318" target="_blank" rel="noopener noreferrer">WhatsApp</a>
        </li>
      </ul>
    </div>
  </div>

  <div class="footer-bottom">
    <div class="container footer-bottom-inner">
      <div class="footer-bottom-left">
        <p class="copyright">{t('footer.copyright')}</p>
        <nav class="footer-legal-links" aria-label="Legal">
          {legalLinks.map(link => (
            <>
              <a href={link.href}>{t('footer.privacy')}</a>
              <span aria-hidden="true">·</span>
            </>
          ))}
          <button id="manage-cookies-bottom" class="footer-cookie-btn-inline">{t('footer.manage_cookies')}</button>
        </nav>
      </div>
      <div class="footer-bottom-social" aria-label="Social media links">
        {socialLinks.slice(0, 3).map(social => (
          <a
            href={social.href}
            class="social-icon-small"
            target="_blank"
            rel="noopener noreferrer"
            aria-label={social.name}
          >
            <span set:html={social.icon}></span>
          </a>
        ))}
      </div>
    </div>
  </div>
</footer>

<style>
  .footer {
    background: var(--bg-footer);
    color: rgba(255, 255, 255, 0.6);
  }

  .footer-main {
    display: grid;
    grid-template-columns: 2fr 1fr 1fr 1fr 1.5fr;
    gap: clamp(24px, 3vw, 48px);
    padding-block: clamp(48px, 6vw, 80px);
    border-bottom: 1px solid rgba(255, 255, 255, 0.07);
  }

  .footer-logo {
    text-decoration: none;
    display: inline-block;
    margin-bottom: 12px;
  }

  .footer-logo-img {
    height: 36px;
    width: auto;
    object-fit: contain;
  }

  .footer-tagline {
    font-size: var(--fs-small);
    color: rgba(255, 255, 255, 0.45);
    margin-bottom: 20px;
    line-height: 1.5;
  }

  .footer-social {
    display: flex;
    gap: 8px;
  }

  .social-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 36px;
    height: 36px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.06);
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    transition: background 0.2s, color 0.2s;
  }

  .social-icon:hover {
    background: rgba(200, 138, 62, 0.2);
    color: var(--accent);
  }

  .footer-col-title {
    font-family: 'Inter', sans-serif;
    font-size: var(--fs-xs);
    font-weight: 700;
    letter-spacing: 0.1em;
    text-transform: uppercase;
    color: rgba(255, 255, 255, 0.35);
    margin-bottom: 16px;
  }

  .footer-links {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 10px;
  }

  .footer-links a {
    font-size: var(--fs-small);
    color: rgba(255, 255, 255, 0.55);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-links a:hover {
    color: var(--white);
  }

  .footer-contact-list {
    list-style: none;
    display: flex;
    flex-direction: column;
    gap: 12px;
  }

  .footer-contact-list li {
    display: flex;
    align-items: flex-start;
    gap: 10px;
    font-size: var(--fs-small);
    color: rgba(255, 255, 255, 0.55);
  }

  .footer-contact-list svg {
    flex-shrink: 0;
    margin-top: 2px;
    color: var(--accent);
    opacity: 0.7;
  }

  .footer-contact-list a {
    color: rgba(255, 255, 255, 0.55);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-contact-list a:hover {
    color: var(--accent);
  }

  /* Footer bottom bar */
  .footer-bottom {
    padding-block: 20px;
  }

  .footer-bottom-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: 16px;
  }

  .footer-bottom-left {
    display: flex;
    flex-direction: column;
    gap: 6px;
  }

  .copyright {
    font-size: var(--fs-xs);
    color: rgba(255, 255, 255, 0.3);
  }

  .footer-legal-links {
    display: flex;
    align-items: center;
    gap: 8px;
    flex-wrap: wrap;
  }

  .footer-legal-links a {
    font-size: var(--fs-xs);
    color: rgba(255, 255, 255, 0.25);
    text-decoration: none;
    transition: color 0.2s;
  }

  .footer-legal-links a:hover {
    color: rgba(255, 255, 255, 0.55);
  }

  .footer-legal-links span {
    font-size: var(--fs-xs);
    color: rgba(255, 255, 255, 0.15);
  }

  .footer-cookie-btn {
    background: none;
    border: none;
    padding: 0;
    font-size: var(--fs-small);
    color: rgba(255, 255, 255, 0.55);
    cursor: pointer;
    text-align: left;
    transition: color 0.2s;
  }

  .footer-cookie-btn:hover {
    color: var(--white);
  }

  .footer-cookie-btn-inline {
    background: none;
    border: none;
    padding: 0;
    font-size: var(--fs-xs);
    color: rgba(255, 255, 255, 0.25);
    cursor: pointer;
    transition: color 0.2s;
  }

  .footer-cookie-btn-inline:hover {
    color: rgba(255, 255, 255, 0.55);
  }

  .footer-bottom-social {
    display: flex;
    gap: 12px;
  }

  .social-icon-small {
    color: rgba(255, 255, 255, 0.3);
    text-decoration: none;
    transition: color 0.2s;
  }

  .social-icon-small:hover {
    color: var(--accent);
  }

  @media (max-width: 1200px) {
    .footer-main {
      grid-template-columns: 2fr 1fr 1fr 1fr;
    }

    .footer-col:last-child {
      grid-column: 1 / -1;
    }
  }

  @media (max-width: 1024px) {
    .footer-main {
      grid-template-columns: 1fr 1fr;
    }

    .footer-brand {
      grid-column: 1 / -1;
    }

    .footer-col:last-child {
      grid-column: auto;
    }
  }

  @media (max-width: 600px) {
    .footer-main {
      grid-template-columns: 1fr;
    }

    .footer-brand {
      grid-column: auto;
    }

    .footer-bottom-inner {
      flex-direction: column;
      text-align: center;
    }

    .footer-bottom-left {
      align-items: center;
    }

    .footer-legal-links {
      justify-content: center;
    }
  }
</style>
