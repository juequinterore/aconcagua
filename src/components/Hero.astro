---
interface Props {
  lang: 'es' | 'en' | 'zh';
  t: (key: string) => string;
}

const { lang, t } = Astro.props;
---

<section class="hero" aria-label="Hero">
  <div class="hero-bg" aria-hidden="true"></div>

  <div class="hero-content container">
    <div class="hero-text reveal">
      <p class="hero-tag">
        <span class="tag-line" aria-hidden="true"></span>
        {t('hero.tag')}
        <span class="tag-line" aria-hidden="true"></span>
      </p>

      <h1 class="hero-headline">
        {t('hero.headline1')}<br />
        {t('hero.headline2')} <em class="hero-em">{t('hero.headline_em')}</em>
      </h1>

      <p class="hero-sub">{t('hero.sub')}</p>

      <div class="hero-actions">
        <button
          class="btn btn-primary hero-btn-primary"
          onclick={`Calendly.initPopupWidget({url: '${t('calendly.url')}'}); return false;`}
        >
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <rect x="3" y="4" width="18" height="18" rx="2" ry="2"/>
            <line x1="16" y1="2" x2="16" y2="6"/>
            <line x1="8" y1="2" x2="8" y2="6"/>
            <line x1="3" y1="10" x2="21" y2="10"/>
          </svg>
          {t('hero.cta_primary')}
        </button>
        <a href="#expediciones" class="btn btn-secondary hero-btn-secondary">
          {t('hero.cta_secondary')}
          <svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <polyline points="6 9 12 15 18 9"/>
          </svg>
        </a>
      </div>
    </div>

    <div class="hero-scroll reveal reveal-delay-3" aria-label={t('hero.scroll')}>
      <a href="#sobre" class="scroll-indicator" aria-label={t('hero.scroll')}>
        <span class="scroll-label">{t('hero.scroll')}</span>
        <span class="scroll-arrow" aria-hidden="true">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <line x1="12" y1="5" x2="12" y2="19"/>
            <polyline points="19 12 12 19 5 12"/>
          </svg>
        </span>
      </a>
    </div>
  </div>

  <!-- Mountain silhouette clip-path at bottom -->
  <div class="hero-mountain" aria-hidden="true"></div>
</section>

<style>
  .hero {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    overflow: hidden;
    color: var(--white);
  }

  .hero-bg {
    position: absolute;
    inset: 0;
    background:
      linear-gradient(
        180deg,
        rgba(15, 25, 35, 0.60) 0%,
        rgba(15, 25, 35, 0.25) 35%,
        rgba(26, 58, 74, 0.45) 75%,
        rgba(15, 25, 35, 0.88) 100%
      ),
      url('/hero.webp') center/cover no-repeat;
    z-index: 0;
  }

  .hero-content {
    position: relative;
    z-index: 2;
    padding-top: 120px;
    padding-bottom: 160px;
    width: var(--container);
    margin-inline: auto;
  }

  .hero-text {
    max-width: 720px;
  }

  .hero-tag {
    display: flex;
    align-items: center;
    gap: 12px;
    font-size: var(--fs-xs);
    font-weight: 600;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--accent);
    margin-bottom: 24px;
  }

  .tag-line {
    display: block;
    width: 32px;
    height: 1px;
    background: var(--accent);
    opacity: 0.7;
  }

  .hero-headline {
    font-size: var(--fs-hero);
    font-weight: 700;
    line-height: 1.08;
    color: var(--white);
    margin-bottom: 24px;
    letter-spacing: -0.02em;
  }

  .hero-em {
    font-style: italic;
    color: var(--accent);
  }

  .hero-sub {
    font-size: clamp(1rem, 1.5vw, 1.125rem);
    line-height: 1.7;
    color: rgba(255, 255, 255, 0.75);
    max-width: 560px;
    margin-bottom: 40px;
  }

  .hero-actions {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
  }

  .hero-btn-primary {
    padding: 16px 32px;
    font-size: 0.9375rem;
  }

  .hero-btn-secondary {
    padding: 16px 28px;
    font-size: 0.9375rem;
  }

  .hero-scroll {
    position: absolute;
    bottom: 48px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 2;
  }

  .scroll-indicator {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 8px;
    color: rgba(255, 255, 255, 0.5);
    text-decoration: none;
    transition: color 0.2s;
    font-size: var(--fs-xs);
    letter-spacing: 0.08em;
    text-transform: uppercase;
  }

  .scroll-indicator:hover {
    color: var(--accent);
  }

  .scroll-arrow {
    animation: bounce 2s infinite;
  }

  @keyframes bounce {
    0%, 100% { transform: translateY(0); }
    50% { transform: translateY(6px); }
  }

  @media (prefers-reduced-motion: reduce) {
    .scroll-arrow {
      animation: none;
    }
  }

  /* Mountain silhouette at bottom */
  .hero-mountain {
    position: absolute;
    bottom: -2px;
    left: 0;
    right: 0;
    height: 120px;
    background: var(--white);
    z-index: 1;
    clip-path: polygon(
      0% 100%,
      0% 70%,
      8% 55%,
      15% 70%,
      22% 45%,
      30% 65%,
      38% 30%,
      46% 55%,
      50% 40%,
      54% 55%,
      62% 20%,
      70% 50%,
      78% 35%,
      85% 58%,
      92% 42%,
      100% 60%,
      100% 100%
    );
  }

  @media (max-width: 768px) {
    .hero-content {
      padding-top: 100px;
      padding-bottom: 140px;
    }

    .hero-headline {
      font-size: clamp(2.2rem, 8vw, 3rem);
    }

    .hero-actions {
      flex-direction: column;
    }

    .hero-btn-primary,
    .hero-btn-secondary {
      width: 100%;
      justify-content: center;
    }
  }
</style>
