---
interface Props {
  lang: 'es' | 'en' | 'zh';
  t: (key: string) => string;
}

const { lang, t } = Astro.props;

const partners = [
  {
    name: t('partners.gr.name'),
    desc: t('partners.gr.desc'),
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>`,
    href: 'https://www.globalrescue.com',
  },
  {
    name: t('partners.pa.name'),
    desc: t('partners.pa.desc'),
    icon: `<svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true"><polygon points="12,2 22,20 2,20"/></svg>`,
    href: 'https://www.pireaconcagua.com',
  },
];
---

<section class="partners-section" aria-label={t('partners.label')}>
  <div class="container partners-inner">
    <p class="partners-label">{t('partners.label')}</p>

    <div class="partners-grid">
      {partners.map(partner => (
        <a
          href={partner.href}
          class="partner-card"
          target="_blank"
          rel="noopener noreferrer"
          aria-label={`${partner.name} â€” ${partner.desc}`}
        >
          <div class="partner-icon" set:html={partner.icon}></div>
          <div class="partner-info">
            <strong class="partner-name">{partner.name}</strong>
            <span class="partner-desc">{partner.desc}</span>
          </div>
          <svg class="partner-arrow" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" aria-hidden="true">
            <line x1="5" y1="12" x2="19" y2="12"/>
            <polyline points="12 5 19 12 12 19"/>
          </svg>
        </a>
      ))}
    </div>
  </div>
</section>

<style>
  .partners-section {
    background: var(--section-partners-bg);
    padding-block: 48px;
    border-top: 1px solid var(--border-subtle);
    border-bottom: 1px solid var(--border-subtle);
  }

  .partners-inner {
    display: flex;
    flex-direction: column;
    gap: 24px;
    align-items: center;
  }

  .partners-label {
    font-size: var(--fs-xs);
    font-weight: 700;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .partners-grid {
    display: flex;
    gap: 24px;
    justify-content: center;
    flex-wrap: wrap;
    width: 100%;
    max-width: 700px;
  }

  .partner-card {
    flex: 1;
    min-width: 260px;
    display: flex;
    align-items: center;
    gap: 16px;
    background: var(--bg-card);
    border: 1px solid var(--border-card);
    border-radius: var(--radius-md);
    padding: 20px 24px;
    text-decoration: none;
    color: var(--text-primary);
    transition: background 0.2s, border-color 0.2s, transform 0.2s;
  }

  .partner-card:hover {
    border-color: rgba(200, 138, 62, 0.4);
    transform: translateY(-2px);
  }

  .partner-icon {
    color: var(--accent);
    flex-shrink: 0;
  }

  .partner-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 3px;
  }

  .partner-name {
    font-size: var(--fs-small);
    font-weight: 600;
    color: var(--text-primary);
  }

  .partner-desc {
    font-size: var(--fs-xs);
    color: var(--text-secondary);
    line-height: 1.4;
  }

  .partner-arrow {
    color: var(--text-muted);
    flex-shrink: 0;
    transition: color 0.2s, transform 0.2s;
  }

  .partner-card:hover .partner-arrow {
    color: var(--accent);
    transform: translateX(4px);
  }

  @media (max-width: 600px) {
    .partners-grid {
      flex-direction: column;
    }

    .partner-card {
      min-width: unset;
    }
  }
</style>
